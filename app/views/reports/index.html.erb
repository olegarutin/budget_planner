<h3><%= link_to 'Dashboard', dashboards_path %></h3>
<hr>
<div class="container">

  <%= form_with model: @transaction, method: :get do |form| %>
    <div class='form-group'>
      <%= form.select :transaction_type, current_user.transactions.transaction_types.keys, { selected: params[:transaction_type] || 'expense' }, { onchange: 'this.form.submit();' } %>
      <%= form.date_field :start_date || Date.today - 7.days %>
      <%= form.date_field :end_date || Date.today %>
      <%= form.submit %>
    </div>

      <div class="row row-cols-2">

        <div class="col">

          <div class="card">
            <div class="card-header">
              Bar Chart for Expenses by Categories
            </div>
              <div class="card-body">
                <canvas id="chart-bar" width="200" height="200" data-data="<%= current_user.amount_for_categories(@transaction_type) %>" data-labels="<%= current_user.user_categories(@transaction_type) %>"></canvas>
              </div>
          </div>
        </div>
 
        <div class="col">

          <div class="card">
            <div class="card-header">
              Pie Chart for Expenses by Categories
            </div>
              <div class="card-body">
                <canvas id="chart-pie" width="200" height="200" data-data="<%= current_user.amount_for_categories(@transaction_type) %>" data-labels="<%= current_user.user_categories(@transaction_type) %>"></canvas>
              </div>
          </div>
        </div>

    </div>

  <% end %>



  <div class="row row-cols-2">

    <div class="col">

      <div class="card">
        <div class="card-header">
          Bar&Line Chart for Income/Expense
        </div>
          <div class="card-body">
            <canvas id="chart-stacked" width="200" height="200" data-data1="<%#= current_user.transactions.amount_for_categories %>" data-data2="<%#= current_user.transactions.amount_for_income %>" data-labels="<%#= current_user.transactions.expense_categories_titles %>"></canvas>
          </div>
      </div>
    </div>

    <div class="col">

      <div class="card">
        <div class="card-header">
          Line Chart for XZ
        </div>
          <div class="card-body">
            <canvas id="chart-line" width="200" height="200" data-data="<%#= current_user.transactions.amount_for_categories %>" data-labels="<%#= current_user.transactions.expense_categories_titles %>"></canvas>
          </div>
      </div>
    </div>

  </div>
</div>
