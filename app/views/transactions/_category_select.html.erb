<span class='d-block'>Category</span>
<%= select_tag(:category_id,
  options_for_select(categories.map do |category|
    [category.title.capitalize, category.id, 'data-image': asset_path(category.image) ]
  end,
  selected: selected), id: 'select_menu',
  style: 'width: 100%;',
  data: { controller: 'select2' }) %>
