<div class='container text-center mt-5'>
  <h3>New wallet</h3>

  <%= form_with url: wallets_path, method: :post, class: 'w-50 m-auto p-4 border' do |f| %>
    <%= f.hidden_field :user_id, value: current_user.id %>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control mb-4' %>

      <div class='d-flex mb-4 mx-auto justify-content-center align-items-center'>
        <span class="mx-2">Currency:</span>
        <%= f.select(:currency, options_for_select([['Spanish dollar'], ['Pound sterling'], ['U.S. dollar'], ['Euro'], ['Ukrainian hryvnia']]), {}, { class: 'w-50 form-control mx-2' }) %>
      </div>

      <%= f.label :quantity %>
      <%= f.number_field :quantity, class: 'form-control mb-4' %>

      <%= f.submit 'Create', class: 'btn btn-primary' %>
  <% end %>
</div>
