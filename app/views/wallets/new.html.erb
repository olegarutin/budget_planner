<div class='container text-center mt-5'>
  <h3>New wallet</h3>

  <%= form_with url: wallets_path, method: :post, class: 'w-50 m-auto p-4 border border-dark', data: { turbo:false } do |f| %>
    <% if @wallet %>
      <% @wallet.errors.full_messages.each do |msg| %>
        <div class='alert alert-dark mx-auto mb-4 mt-3'>
          <%= msg %>
        </div>
      <% end %>
    <% end %>

    <%= f.hidden_field :user_id, value: current_user.id %>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control mb-4 border-dark text-center' %>

      <div class='row'>
        <div class='col-md-6'>
          <%= f.label :currency %>
          <%= f.select(:currency, options_for_select([['Spanish dollar'], ['Pound sterling'], ['U.S. dollar'], ['Euro'], ['Ukrainian hryvnia']]), {}, { class: 'form-control text-center border-dark mb-4' }) %>
        </div>
        <div class='col-md-6'>
          <%= f.label :quantity %>
          <%= f.number_field :quantity, class: 'form-control mb-4 border-dark text-center', value: 0 %>
        </div>
      </div>

      <%= f.submit 'Create', class: 'btn btn-dark w-50' %>
  <% end %>
</div>
