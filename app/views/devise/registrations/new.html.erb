<div class='col-lg-6 offset-lg-3 border p-5'>
  <div class='form-centered w-75 mx-auto'>
    <h2 class='mb-4'>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { 'data-turbo': false }) do |f| %>
      <%= render '/shared/error_messages', pattern: resource %>

      <div class='field mb-2'>
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control form-control-sm', autofocus: true, autocomplete: 'email' %>
      </div>

      <div class='field mb-2 position-relative' data-controller='password-visibility'>
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control form-control-sm', autocomplete: 'current-password', 'data-password-visibility-target': 'input' %>
        <button data-action='password-visibility#toggle' class='rounded btn-outline-dark position-absolute bottom-0 end-0'>
          <span class='bi bi-eye'>
          </button>
      </div>

      <div class='field mb-3 position-relative' data-controller='password-visibility'>
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class: 'form-control form-control-sm', autocomplete: 'current-password', 'data-password-visibility-target': 'input' %>
        <button data-action='password-visibility#toggle' class='rounded btn-outline-dark position-absolute bottom-0 end-0'>
          <span class='bi bi-eye'>
          </button>
      </div>

      <div class='d-flex justify-content-center'>
        <%= f.submit 'Sign up', class: 'mx-1 btn btn-dark' %>
        <%= link_to 'Log in', new_session_path(resource_name), class: 'mx-1 btn btn-dark' %>
      </div>

    <% end %>
  </div>
</div>
