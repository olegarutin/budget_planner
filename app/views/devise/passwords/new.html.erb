<div class='col-lg-6 offset-lg-3 border p-5'>
  <div class='form-centered w-75 mx-auto'>

    <h3>Forgot your password?</h3>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, 'data-turbo': false }) do |f| %>
      <%= render '/shared/error_messages', pattern: resource %>

      <div class='field'>
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control form-control-sm', autofocus: true, autocomplete: 'email' %>
      </div>

      <div class='actions'>
        <%= f.submit 'Send me reset password instructions', class: 'btn btn-dark mt-3' %>
        <%= link_to 'Back', :back, class: 'btn btn-dark mt-3' %>
      </div>
    <% end %>
  </div>
</div>
