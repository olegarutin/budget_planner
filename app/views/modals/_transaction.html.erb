<div class='modal fade text-center' id='AddTransaction' tabindex='-1' aria-labelledby='AddTransactionLabel' aria-hidden='true' data-bs-backdrop='static' data-bs-keyboard='false'>
  <div class='modal-dialog modal-lg mx-auto my-4'>
    <div class='modal-content'>
      <div class='modal-header'>
        <h5 class='modal-title' id='AddTransactionLabel'>Add transaction</h5>
        <button type='button' class='btn-close' data-bs-dismiss='modal' aria-label='Close'></button>
      </div>

      <div class='modal-body mx-5'>
        <%= form_with url: transactions_path, method: :post, class: 'm-auto px-4 pt-4 my-4 border', data: { controller: 'transactions', action: 'turbo:submit-end->transactions#hideModal' } do |f| %>
          <%= turbo_frame_tag 'transaction_errors' do %>
            <% if @transaction %>
              <%= render 'shared/error_messages', pattern: @transaction %>
            <% end %>
          <% end %>

          <div class='row justify-content-center mb-4'>
            <div class='col-5'>
              <span class='border-bottom m-auto d-block'>Wallet</span>
              <div class='d-flex border-bottom'>
                <img src='https://img.icons8.com/doodle/48/000000/wallet--v1.png'/>
                <%= turbo_frame_tag 'select_wallet', class: 'w-100' do %>
                  <%= select_tag(:wallet_id, options_for_select(@wallets.map { |wallet| [wallet.name, wallet.id] }))%>
                <% end %>
              </div>
            </div>

            <div class='col-5'>
              <span class='border-bottom m-auto d-block'>Amount</span>
              <div class='d-flex border-bottom'>
                <img src='https://img.icons8.com/doodle/48/000000/coins--v1.png'/>
                <%= f.text_field :amount, min: 0, placeHolder: 0, class: 'amount_field form-control text-cetner border-0 text-center', required: true, data: { controller: 'inputmask', 'inputmask-target': 'field', 'inputmask-type-value': 'number' } %>
              </div>
            </div>
          </div>

          <div data-controller='categories'>
            <%= link_to 'Expense', categories_path('transaction_type': 'expense'), id: 'button', data: { turbo_frame: 'categories', action: 'categories#change', 'categories-target': 'button' }, class: 'btn mx-auto border' %>
            <%= link_to 'Income', categories_path('transaction_type': 'income'), id: 'button', data: { turbo_frame: 'categories', action: 'categories#change', 'categories-target': 'button' }, class: 'btn mx-auto border' %>
          </div>

          <div class='row justify-content-center my-4'>
            <%= turbo_frame_tag 'categories', class: 'col-5' do %>
              <%= render 'transactions/category_select', categories: @categories, selected: nil %>
            <% end %>

            <div class='col-5'>
              <%= f.label :note, class: 'd-block' %>
              <%= f.text_field :note, class: 'form-control text-center col-5', autocomplete: 'off' %>
            </div>

            <%= link_to 'Add Category', '', class: 'btn btn-dark mb-2 mt-4 col-5', data: { 'bs-toggle': 'modal', 'bs-target': '#AddCategory', controller: 'categories', action: 'click->categories#resetModal' } %>
          </div>

          <div class='modal-footer justify-content-center'>
            <%= f.submit 'Create', class: 'btn btn-secondary', data: { turbo_frame: 'transaction_modal', action: 'transactions#hideModal' } %>
            <button type='button' class='btn btn-secondary' data-bs-dismiss='modal' turbo-frame='transactions'>Close</button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
