<div id="<%= dom_id category %>">
  <p>
    <strong>Title:</strong>
    <%= category.title %>
  </p>

  <p>
    <strong>Image:</strong>
    <div id="category-image">
      <%= image_tag("#{category.image}") %>
    </div>
  </p>

  <p>
    <strong>Type:</strong>
    <%= category.kind %>
  </p>

</div>
